{% block sw_cms_mapping_field_top_sell_product %}
    <div class="sw-cms-mapping-field-top-sell-product">


        {% block sw_cms_mapping_field_top_sell_product_info %}
            <div class="sw-cms-mapping-field-top-sell-product__info">


                {% block sw_cms_mapping_field_top_sell_product_label %}
                    <div class="sw-cms-mapping-field-top-sell-product__label">
                        {{ label }}
                    </div>
                {% endblock %}


                {% block sw_cms_mapping_field_mapping_top_sell_product %}
                    <template v-if="allowedMappingTypesCategory.length">

                        {% block sw_cms_mapping_field_mapping_top_sell_product_selection %}
                            <sw-context-button
                                v-if="!isMapped"
                                class="sw-cms-mapping-field-top-sell-product__selection"
                                :menu-width="340"
                            >

                                {% block sw_cms_mapping_field_top_sell_product_mapping_selection_action %}
                                    <div
                                        slot="button"
                                        class="sw-cms-mapping-field-top-sell-product__action"
                                    >
                                        <sw-icon
                                            name="regular-external-link"
                                            size="16"
                                        />
                                        <span class="sw-cms-mapping-field-top-sell-product__action-label">
                        {{ $tc('sw-cms.detail.label.buttonMappingAction') }}
                    </span>
                                    </div>
                                {% endblock %}


                                {% block sw_cms_mapping_field_top_sell_product_mapping_selection_options %}
                                    <div class="sw-cms-mapping-field-top-sell-product__options">
                                        <sw-context-menu-item
                                            v-for="(prop, index) in allowedMappingTypesCategory"
                                            :key="index"
                                            @click="onMappingSelect(prop)"
                                        >
                                            {{ prop }}
                                        </sw-context-menu-item>
                                    </div>
                                {% endblock %}
                            </sw-context-button>
                        {% endblock %}


                        {% block sw_cms_mapping_field_top_sell_product_mapping_remove_action %}

                            <div
                                v-else
                                class="sw-cms-mapping-field-top-sell-product__action-remove"
                                @click="onMappingRemove"
                            >
                                <sw-icon
                                    name="regular-times"
                                    size="14"
                                />
                                <span class="sw-cms-mapping-field-top-sell-product__action-label">
                    {{ $tc('sw-cms.detail.label.buttonMappingRemoveAction') }}
                </span>
                            </div>
                        {% endblock %}
                    </template>
                {% endblock %}
            </div>
        {% endblock %}


        {% block sw_cms_mapping_field_top_sell_product_content %}
            <div
                v-if="!isMapped"
                class="sw-cms-mapping-field-top-sell-product__form-field"
            >
                <slot>
                    {% block sw_cms_mapping_field_top_sell_product_slot_default %}{% endblock %}</slot>
            </div>
        {% endblock %}

        <template v-else>

            {% block sw_cms_mapping_field_top_sell_product_mapping_value %}
                <div class="sw-cms-mapping-field-top-sell-product__mapping-value">
                    {{ $tc('sw-cms.detail.label.mappingPreview') }} <b>{{ config.value }}</b>
                </div>
            {% endblock %}


            {% block sw_cms_mapping_field_top_sell_product_preview %}
                <div
                    v-if="hasPreview"
                    class="sw-cms-mapping-field-top-sell-product__preview"
                >
                    <slot
                        v-if="demoValue !== null"
                        name="preview"
                        :demoValue="demoValue"
                    ></slot>

                    <sw-alert
                        v-else
                        variant="info"
                        class="sw-cms-mapping-field-top-sell-product__empty-demo"
                    >
                        {{ $tc('sw-cms.detail.label.mappingEmptyPreview') }}
                    </sw-alert>
                </div>
            {% endblock %}
        </template>
    </div>
{% endblock %}
