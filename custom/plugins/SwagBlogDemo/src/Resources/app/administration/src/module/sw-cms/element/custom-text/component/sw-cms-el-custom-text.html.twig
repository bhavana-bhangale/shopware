{% block sw_cms_element_custom_text %}
    <div class="sw-cms-el-custom-text">
        <div
            v-if="element.config.customText.source === 'mapped'"
            class="sw-cms-el-custom-text__mapping-preview content-editor"
            v-html="$sanitize(demoValue)"
        ></div>

        <sw-text-editor
            v-else
            v-model="element.config.customText.value"
            :disabled="disabled"
            :vertical-align="element.config.verticalAlign.value"
            :allow-inline-data-mapping="true"
            :is-inline-edit="true"
            sanitize-input
            @blur="onBlur"
            @input="onInput"
        />
    </div>
{% endblock %}
