<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_cms_el_config_custom_text %}
    <sw-tabs
        position-identifier="sw-cms-element-config-custom-text"
        class="sw-cms-el-config-custom-text__tabs"
        default-item="content"
    >

        <template slot-scope="{ active }">
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_el_config_custom_text_tab_content %}
                <sw-tabs-item
                    :title="$tc('sw-cms-custom.elements.general.config.tab.content')"
                    name="content"
                    :active-tab="active"
                >
                    {{ $tc('sw-cms-custom.elements.general.config.tab.content') }}
                </sw-tabs-item>
            {% endblock %}
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_el_custom_text_config_tab_options %}
                <sw-tabs-item
                    :title="$tc('sw-cms-custom.elements.general.config.tab.settings')"
                    name="settings"
                    :active-tab="active"
                >
                    {{ $tc('sw-cms-custom.elements.general.config.tab.settings') }}
                </sw-tabs-item>
            {% endblock %}
        </template>

        <template
            slot="content"
            slot-scope="{ active }"
        >
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_el_custom_text_config_content %}
                <sw-container
                    v-if="active === 'content'"
                    class="sw-cms-el-config-custom-text__tab-content"
                >
                    <sw-cms-mapping-field
                        v-model="element.config.customText"
                        :label="$tc('sw-cms-custom.elements.custom-text.config.label.content')"
                        value-types="string"
                    >
                        <sw-text-editor
                            v-model="element.config.customText.value"
                            :allow-inline-data-mapping="true"
                            sanitize-input
                            @input="onInput"
                            @blur="onBlur"
                        />

                        <div
                            slot="preview"
                            slot-scope="{ demoValue }"
                            class="sw-cms-el-config-custom-text__mapping-preview"
                        >
                            <div v-html="$sanitize(demoValue)"></div>
                        </div>
                    </sw-cms-mapping-field>
                </sw-container>
            {% endblock %}

            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_cms_el_custom_text_config_settings %}
                <sw-container
                    v-if="active === 'settings'"
                    class="sw-cms-el-config-custom-text__tab-settings"
                >
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_cms_el_custom_text_config_settings_vertical_align %}
                        <sw-select-field
                            v-model="element.config.verticalAlign.value"
                            :label="$tc('sw-cms-custom.elements.general.config.label.verticalAlign')"
                            :placeholder="$tc('sw-cms-custom.elements.general.config.label.verticalAlign')"
                        >
                            <option value="flex-start">
                                {{ $tc('sw-cms-custom.elements.general.config.label.verticalAlignTop') }}
                            </option>
                            <option value="center">
                                {{ $tc('sw-cms-custom.elements.general.config.label.verticalAlignCenter') }}
                            </option>
                            <option value="flex-end">
                                {{ $tc('sw-cms-custom.elements.general.config.label.verticalAlignBottom') }}
                            </option>
                        </sw-select-field>
                    {% endblock %}
                </sw-container>
            {% endblock %}
        </template>
    </sw-tabs>
{% endblock %}
